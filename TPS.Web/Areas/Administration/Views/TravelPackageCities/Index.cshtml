@model IEnumerable<TPS.Domain.TravelPackageCity>

@{
    ViewData["Title"] = "Index";
    var tp = (TPS.Domain.TravelPackage)ViewBag.TravelPackage;
}

<h2>Travel Package: @tp.Name</h2>

<p>
 <a asp-action="Create" asp-route-tpId="@tp.Id">Add City</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>City</th>
            <th>Days</th>
            <th>Attractions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) 
{
        <tr>
            <td>@item.City.Name</td>
            <td>@item.NumberOfDays</td>
            <td><a asp-action="Index" asp-controller="TravelPackageCityAttractions" asp-route-tpcId="@item.Id">Attractions</a></td>
        </tr>
}
    </tbody>
</table>
